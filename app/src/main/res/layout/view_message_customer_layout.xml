<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/customer_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/customer_mobile"
            android:textStyle="bold"
            android:text="Name"
            android:textSize="@dimen/text_large"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/customer_mobile"
            app:layout_constraintStart_toEndOf="@+id/customer_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/statusTxt"
            android:layout_width="0dp"
            android:text="mobile"
            android:textSize="@dimen/text_large"
            app:layout_constraintHorizontal_weight="0.3"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/customer_mobile"
            app:layout_constraintEnd_toStartOf="@id/checkbox"
            android:id="@+id/statusTxt"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="0.1"
            android:text="status"
            android:textSize="@dimen/text_large"
            android:layout_height="wrap_content"/>
        <CheckBox
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/statusTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/checkbox"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="0.1"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@color/coloGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
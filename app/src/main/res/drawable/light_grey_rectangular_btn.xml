<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/dark_gray_gradientStart" />
            <gradient android:angle="-90" android:startColor="@color/dark_gray_gradientStart" android:endColor="@color/dark_gray_gradientStart" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/dark_gray" />
            <solid android:color="@color/dark_gray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/dark_gray" />
            <gradient android:angle="-90" android:startColor="@color/white_alpha_70" android:endColor="@color/white_alpha_40" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:background="@color/colorMobster7B"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="39dp"
        android:paddingTop="39dp">

        <ImageView
            android:id="@+id/drag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_draggable" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/drag"
            android:maxLines="2"
            android:minLines="2"
            android:text="Chilli chicken burger"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/state"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/itemName"
            android:background="@drawable/border_item_status"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:text="xyz"
            android:gravity="center"
            android:textColor="@color/white"

             />


        <ImageView
            android:id="@+id/itemState"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toLeftOf="@+id/edit"
            android:background="@drawable/status_indicator_green" />

        <RelativeLayout
            android:id="@+id/edit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>

        <!--<View-->
        <!--android:layout_width="5dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@color/colorMartinique" />-->


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMartinique" />

</RelativeLayout>
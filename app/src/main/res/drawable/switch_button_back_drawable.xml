<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorMobster7B" />
            <corners android:radius="99dp" />
            <stroke android:width="1dp" android:color="@color/colorMortar" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorMortar" />
            <corners android:radius="99dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorMobster7B" />
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="@color/colorBlackCurrent" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:id="@+id/itemName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:text="wqwqwwqwqwqqwwq" />

    <EditText
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/itemName"
        android:textColor="@color/white"
        android:id="@+id/itemPrice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="44.55" />
    <Button
        android:id="@+id/saveItem_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangular_btn_shape"
        android:text="save"
        android:textColor="@color/colorBlackCurrent3B"
        android:textColorHint="@color/colorFrenchgray" />


</RelativeLayout>


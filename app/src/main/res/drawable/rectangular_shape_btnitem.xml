<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/red_gradientStart" />
            <gradient android:angle="-90" android:startColor="@color/red_gradientStart" android:endColor="@color/red_gradientStart" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/red" />
            <solid android:color="@color/red" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/red" />
            <gradient android:angle="-90" android:startColor="@color/red_gradientStart" android:endColor="@color/red_gradientEnd" />
        </shape>
    </item>
</selector>
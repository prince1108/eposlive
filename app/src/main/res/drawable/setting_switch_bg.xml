<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorFrenchgray"/>
                    <size android:height="50dp"
                        android:width="100dp"/>
                </shape>
            </item>

            <item android:top="5dp" android:bottom="5dp"
                  android:right="50dp" android:left="5dp">
                <shape>
                    <solid android:color="@color/white"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorDanube"/>
                    <size android:height="50dp"
                        android:width="100dp"/>
                </shape>
            </item>

            <item android:top="5dp" android:bottom="5dp"
                android:right="5dp" android:left="50dp">
                <shape>
                    <solid android:color="@color/white"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>